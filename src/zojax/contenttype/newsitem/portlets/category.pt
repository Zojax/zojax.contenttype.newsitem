<div class="z-portlet portlet-news-category" i18n:domain="zojax.contenttypes">

  <h2 class="z-portlet-header" i18n:translate="">News categories</h2>

  <div class="z-portlet-body">
    <div class="z-portlet-item">
      <ul>
	<li tal:repeat="category view/categories">
	  <a tal:content="category/title"
             tal:attributes="href category/@@absolute_url"></a>
	</li>
      </ul>
    </div>
  </div>
</div>
